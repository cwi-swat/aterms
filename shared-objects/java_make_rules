ANT_ENV = \
  BUILDFILE=${top_srcdir}/build.xml \
  JAR=${JARFILE} \
  MAIN_CLASS=${MAIN_CLASS} \
  LOCAL_JARS=${LOCAL_JARS} \
  EXTERNAL_JARS=${EXTERNAL_JARS} \
  JAVA_PACKAGES=${JAVA_PACKAGES} \
  PACKAGE=${PACKAGE}

if MAINTAINER_MODE
${JARFILE}: dummy
	${ANT_ENV} ant dist

dummy:

clean-local:
	${ANT_ENV} ant clean

doc: dummy
	${ANT_ENV} ant doc

endif
