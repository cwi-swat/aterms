module ATerm-Utils
  imports ATerm

  exports
    sorts ATermType
      
    context-free syntax
      get-type ( ATerm )				-> ATermType
      "#int"						-> ATermType
      "#list"						-> ATermType
      "#appl"						-> ATermType
      "#placeholder"					-> ATermType
      capitalize ( AFun )				-> AFun
      afun-concat ( AFun+ )				-> AFun

      capitalize					-> AFun {reject}

  hiddens
    variables
      "$Char*"[0-9]*	-> CHAR*
      "$AFun"		-> AFun
      "$AFun+"		-> AFun+
      "$Int"		-> IntCon
      "$ATerm"		-> ATerm
      "$ATerm*"		-> { ATerm "," }*

