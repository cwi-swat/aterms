module C-Integers

exports
  sorts C-NAT-CON
  
  lexical syntax
    [1-9][0-9]+		-> C-NAT-CON
    [0-9]		-> C-NAT-CON

  context-free syntax
    succ(C-NAT-CON)	-> C-NAT-CON

hiddens
  lexical syntax
    [\ \n\t]		-> LAYOUT
  context-free restrictions
    LAYOUT? -/- [\ \n\t]

  variables
    "$Char"[0-9]*	-> CHAR
    "$Char+"[0-9]*	-> CHAR+

