module ATerm-Syntax
   imports Literal-Syntax Integer-Syntax

   exports
      sorts ATermList ACon AFun ATerm ATerms Ann

      lexical syntax
         [\ \t\n]         -> LAYOUT

	 [a-zA-Z\_][a-zA-Z0-9\_\-]*	-> AFun {avoid}

      lexical restrictions
	AFun -/- [a-zA-Z0-9\_\-]

      context-free restrictions
        LAYOUT? -/- [\ \t\n]

      context-free syntax
         { ATerm "," }*		   -> ATerms    {avoid}
         "[" {ATerm ","}* "]"      -> ATermList
         IntCon                    -> ACon      {constructor}
         AT-Literal                -> AFun      {constructor}
         "{" {ATerm ","}+ "}"      -> Ann       {constructor}
         ACon                      -> ATerm     {constructor}
         ATermList                 -> ATerm     {constructor}
         AFun                      -> ATerm     {constructor}
         ATerm Ann		   -> ATerm	{constructor}
         AFun "(" {ATerm ","}+ ")" -> ATerm     {constructor}
         "<" ATerm ">"		   -> ATerm	{constructor}

