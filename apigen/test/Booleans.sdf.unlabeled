definition
module Main
  imports Booleans

module Booleans

exports
  sorts Bool BoolList

  lexical syntax
    [\ \t\n]			-> LAYOUT
    [t][r][u][e]		-> Bool {cons(true)} 

  context-free restrictions
    LAYOUT? -/- [\ \t\n]

  context-free syntax
    false			-> Bool {cons(false)}
    Bool "&" Bool		-> Bool {cons(and),left}
    Bool "|" Bool		-> Bool {cons(or),left}

    "[" { Bool ";" }* "]" 	-> BoolList {cons(list)}

   context-free priorities
    Bool "&" Bool -> Bool
  > Bool "|" Bool -> Bool
