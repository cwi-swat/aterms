module Booleans

imports Layout

exports
  sorts Bool BoolList

  lexical syntax
    [\ \t\n]			-> LAYOUT
    [t][r][u][e]		-> Bool {cons("true")} 

  context-free restrictions
    LAYOUT? -/- [\ \t\n]

  context-free syntax
    false			-> Bool {cons("false")}
    lop:Bool "&" rop:Bool	-> Bool {cons("and"),left}
    lop:Bool "|" rop:Bool	-> Bool {cons("or"),left}

    "[" elems:{ Bool ";" }* "]" -> BoolList {cons("list")}

  context-free priorities
    lop:Bool "&" rop:Bool -> Bool
  > lop:Bool "|" rop:Bool -> Bool
