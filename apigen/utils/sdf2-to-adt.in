#! /bin/sh

# {{{ variables

     prefix=@prefix@
exec_prefix=@exec_prefix@
     bindir=@bindir@
    datadir=@datadir@
    SGLRBIN=@SGLRBIN@
     ASFBIN=@ASFBIN@
   ATERMBIN=@ATERMBIN@
      PTBIN=@PTBIN@
    PKGDATA=${datadir}/@PACKAGE@
        PRG=`basename $0`

# }}}

# {{{ usage()

usage() {
cat << ENDCAT >&2
Usage: $PRG -i <sdf2-specification> [options]

Parameters:
  
  -i | --input  <FILE>    specify input specification      [unspecified]
  -o | --output <FILE>    specify name of generated ADT    [default: <IN>.adt]
  -e | --expand-cons      propagate cons-annotations       [on]
  -r | --remove-cons      remove cons-annotations          [off]
  -t | --table <FILE>     override APIGEN-parsetable       [see below]
  -l | --label <FILE>     override labeling equations      [see below]
  -g | --generator <FILE> override compiled generator      [see below]
  -I | --imploded         ADT without AsFix (appl/prod)    [off]
  -v | --verbose          be verbose during generation     [off]
  -s | --skip-cleanup     skip cleanup (debugging aid)     [off]
  -h | --help             display this information

Default locations:
   APIGEN-parsetable = ${APITABLE}
  Labeling equations = ${ADDLABELS}
  Standard generator = ${SDF2TOADT}
  Imploded generator = ${SDF2IMPL}

Example: ${PRG} --remove-cons -i Booleans.sdf -o Booleans.adt

ENDCAT
}

# }}}
# {{{  info()

info () {
  if [ $VERBOSE -gt 0 ]; then
    echo $* >&2
   fi
}

# }}}
# {{{  error()

error() {
  echo "${PRG}: $*" >&2
  exit 1
}

# }}}
# {{{  require()

require() {
  [ -f $1 ] || error "no such file: $1"
}

# }}}
# {{{  cleanup()

cleanup() {
  if [ ${CLEANUP} -gt 0 ]; then
    info "- Cleaning up intermediate files"
    for n in 1 2 3 4 5; do
      filename=".api_${n}_$$"
      rm -f ${filename}
    done
  else
    info "- No cleanup, here are your intermediate files:"
    if [ ${VERBOSE} -gt 0 ]; then
      ls -l .api_[0-5]_$$
    fi
  fi
}

# }}}

# {{{  default settings

# settings/options
INPUT=""
OUTPUT=""
VERBOSE=0
CLEANUP=1
IMPLODED=0
CONSOPT='cons-expand'

# data needed
 APITABLE=${PKGDATA}/Sdf2-to-ADT.trm.tbl
ADDLABELS=${PKGDATA}/AddLabels.eqs

# binaries
 SDF2TOADT=${bindir}/Sdf2-to-ADT
SDF2TOIMPL=${bindir}/Sdf2-to-Imploded-ADT
      SGLR=${SGLRBIN}/sglr
   UNPARSE=${PTBIN}/unparsePT
 APPLYFUNC=${PTBIN}/apply-function
 EVALUATOR=${ASFBIN}/asfe

# }}}

# {{{  handle command line options

if [ $# -eq 0 ]; then
  usage
  exit 1
fi

while [ $# -gt 0 ]
do
  case $1 in
    -e | --expand-cons)
      CONSOPT='cons-expand' ;;

    -r | --remove-cons)
      CONSOPT='cons-remove' ;;

    -i | --input)
      shift; INPUT=$1 ;;

    -o | --output)
      shift; OUTPUT=$1 ;;

    -t | --table)
      shift; APITABLE=$1 ;;

    -l | --label)
      shift; ADDLABELS=$1 ;;

    -g | --generator)
      shift; SDF2TOADT=$1 ;;

    -I | --imploded)
      IMPLODED=1 ;;

    -v | --verbose)
      VERBOSE=1 ;;

    -s | --skip-cleanup)
      CLEANUP=0 ;;

    -h | --help)
      usage; exit 0 ;;

    *)
      error "unknown option: $1"
  esac
  shift
done

# }}}

# {{{ sanity checks and variable setup

if [ "a${INPUT}" = "a" ]; then
  error "no input file specified (use -i <file>)"
else
  require ${INPUT}
fi

require ${APITABLE}

if [ "a${OUTPUT}" = "a" ]; then
  OUTPUT=${INPUT}.adt
fi

if [ ${IMPLODED} -eq 1 ]; then
  GENERATOR=${SDF2TOIMPL}
  FUNC="sdf-to-imploded-adt"
else
  GENERATOR=${SDF2TOADT}
  FUNC="sdf-to-asfix2me-adt-${CONSOPT}"
fi

# }}}

# {{{  err()

err() {
  error "Bailing out!"
}

# }}}
# {{{  generate ADT from SDF

trap cleanup EXIT

info "Generating ${OUTPUT} from ${INPUT}:"

info " - Parsing ${INPUT} (${APITABLE})"
${SGLR} -p ${APITABLE} -s SDF -i ${INPUT} -o .api_1_$$ || err

info " - Labeling ${INPUT} (parsed)"
${APPLYFUNC} -f add-labels -s SDF -i .api_1_$$ -o .api_2_$$ || err
${EVALUATOR} -e ${ADDLABELS} -i .api_2_$$ -o .api_3_$$ || err

info " - Generating ADT (${GENERATOR})"
${APPLYFUNC} -f ${FUNC} -s ATerm < .api_3_$$ > .api_4_$$ || err
${GENERATOR} < .api_4_$$ | ${UNPARSE} > ${OUTPUT} || err

# }}}
