#!/bin/sh
PRG=`basename $0`
DATE=`date`

# {{{ autoconf variables

prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
datadir=@datadir@

# }}}
# {{{ usage()

usage() {
cat << ENDCAT >&2
Usage   : $PRG <module> <options>
Example : $PRG Booleans -prefix SDF -prologue Booleans.pro
Note    : <options> are passed to apigen.java.JavaGen.
ENDCAT
}

# }}}

# {{{ check argument count

if test $# -lt 1
then
  usage
  exit 1
fi

# }}}

# {{{ Variable section

MODULE=$1
shift

APIFILE="${MODULE}.adt"

GENJAVAAPI="java -classpath ${CLASSPATH}:${prefix}/classes apigen.java.JavaGen"

# }}}

# {{{ Sanity check

if test ! -f ${MODULE}.adt
then
  echo "could not find adt-file: ${MODULE}.adt" >&2
  exit 1
fi

# }}}

${GENJAVAAPI} -input ${MODULE}.adt -output ${MODULE} $@

