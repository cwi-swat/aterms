
tool example is { command="java-adapter -class toolbus.Example" }

process EXAMPLE is
let
  T : example,
  Count : int,
  Name  : str
in
  execute(example, T?) .
  (
    (
      snd-eval(T, msg("Hello World!")) delay(sec(3)) .
      rec-value(T, Count?) .
      printf("Hello number %d\n", Count)
    ) * delta 
    ||
    ( rec-event(T, button(Name?)) .
      printf("Button pressed: %s\n", Name) .
      snd-ack-event(T, button(Name))
    ) * delta
  )
endlet

toolbus(EXAMPLE)

