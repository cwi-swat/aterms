
PRODUCT     = @PRODUCT@
VERSION     = @VERSION@
CLEAN       = @CLEAN@
@SET_MAKE@

srcdir      = @srcdir@
top_srcdir  = @top_srcdir@
prefix      = @prefix@
exec_prefix = @exec_prefix@
bindir		= @bindir@
libdir		= @libdir@
includedir  = $(prefix)/include
classdir	= ${prefix}/classes

SUBDIRS		= aterm

INSTALL     = @INSTALL@
INSTALL_DAT = @INSTALL_DAT@
INSTALL_PRG = @INSTALL_PRG@

DISTFILES   = Makefile.in

all:
	@for dir in ${SUBDIRS}; \
	do \
		echo "make all in $$dir"; \
		cd $$dir; ${MAKE} -s all; \
		cd ..; \
	done

clean:
	@${CLEAN}
	@for dir in ${SUBDIRS}; \
	do \
		echo "make clean in $$dir"; \
		cd $$dir; ${MAKE} -s clean; \
		cd ..; \
	done

install:
	@for dir in ${SUBDIRS}; \
	do \
		echo "make install in $$dir"; \
		cd $$dir; ${MAKE} -s install; \
		cd ..; \
	done

dist:
	@cp ${DISTFILES} ${DISTDIR}
	@for dir in ${SUBDIRS}; \
	do \
		echo "make dist in $$dir"; \
		mkdir ${DISTDIR}/$$dir; \
		cd $$dir; ${MAKE} -s DISTDIR=${DISTDIR}/$$dir dist; \
		cd ..; \
	done 	

