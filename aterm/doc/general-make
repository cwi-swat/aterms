.SUFFIXES: .grap .pic .ltx .dvi .bbl .ind .idx .xwd .ps .tex .fig

.ltx.dvi:
	latex $<
	-@fgrep -s 'LaTeX Warning: Citation' $*.log && bibtex $* && latex $<
	-@fgrep -s 'Rerun to get cross-references right' $*.log && latex $<

.ltx.bbl:
	bibtex $*

.pic.tex:
	gpic -t $*.pic > $*.tex

.grap.pic:
	grap $*.grap > $*.pic
	remove-lfs $*.pic

.idx.ind:
	makeindex $*

.xwd.ps:
	xbm2ps -s 0.55x0.55 $*.xwd > $*.ps

.fig.ps:
	fig2dev -Lps $< $@

