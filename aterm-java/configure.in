dnl $Id$

AC_INIT(configure.in)
AM_INIT_AUTOMAKE(aterm-java, 1.1beta)
AC_PREREQ(2.13)

dnl Let aclocal use macros in ./config directory
ACLOCAL="${ACLOCAL} -I ./config"

AC_SET_MAKE

dnl AC_ARG_WITH(shared-objects,
dnl    [  --with-shared-objects=JAR       /path/to/shared-objects-<version>.jar],
dnl    SHARED_OBJECTS=$withval,SHARED_OBJECTS=${datadir}/shared-objects.jar)
dnl AC_SUBST(SHARED_OBJECTS)

AC_PACKAGE_REQUIRE(shared-objects, shared-objects-config,
   [ --with-shared-objects=DIR       installation directory of shared-objects])
SHARED_OBJECTS="${SHARED_OBJECTS}/share/shared-objects-1.1beta.jar"
AC_SUBST(SHARED_OBJECTS)

AC_OUTPUT(
  Makefile
  aterm/Makefile
  aterm/pure/Makefile
  aterm/visitor/Makefile
  test/Makefile
  config/Makefile
)
